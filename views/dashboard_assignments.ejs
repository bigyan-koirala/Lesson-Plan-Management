<%- include('components/header') %>
<body>
    <div class="flex flex-row">
        <div >
            <%- include('components/sidebar') %>
        </div>
        <div class="mx-5">
            <table class="table-auto w-full border">
                <thead>
                    <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-left">Title</th>
                    <th class="border-b font-medium p-4 pl-8 pt-0 pb-3 text-left">Body</th>
                </thead>
                <tbody>
                    <% for(let assignment of subject.assignments) { %>
                        <tr class="p-2">
                            <td class="border-b p-4 pl-8"><%= assignment.title %></td>
                            <td class="border-b p-4 pl-8"><%= assignment.body %></td>
                        </tr>
                    <%} %>

                </tbody>
            </table>
        </div>
    </div>
</body>

<%- include('components/footer') %>